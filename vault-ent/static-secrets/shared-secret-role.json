{
  "role_type": "jwt",
  "policies": ["static-secret", "dynamic-secret", "csi-secret"],
  "user_claim": "/kubernetes.io/serviceaccount/name",
  "user_claim_json_pointer": true,
  "bound_claims_type":"glob",
  "bound_claims": {
    "/kubernetes.io/namespace": ["static*", "dynamic-app", "csi-app"],
    "/kubernetes.io/serviceaccount/name": "shared-app-sa"
  },
  "bound_audiences": "vault",
  "token_period": 3600
}